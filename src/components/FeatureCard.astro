---
export interface Props {
  title: string;
  description: string;
  href?: string;
  class?: string;
}
const { title, description, href, class: cls } = Astro.props as Props;
---
<a href={href || '#'} class={`block focus-visible:outline-none ${cls || ''}`}>
  <article class="card h-full p-6 transition-transform duration-200 hover:-translate-y-0.5 wiggle-on-hover">
    <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-blue-50 text-brand wiggle-target">
      <slot name="icon" />
    </div>
    <h3 class="mt-4 text-lg font-semibold text-slate-900 dark:text-slate-100">{title}</h3>
    <p class="mt-2 text-slate-600 text-sm dark:text-slate-300">{description}</p>
  </article>
  <span class="sr-only">Buka {title}</span>
</a>
