---
export interface Props {
  name: 'javascript' | 'php' | 'python';
  size?: number;
  class?: string;
}
const { name, size = 40, class: cls = '' } = Astro.props as Props;
const labelMap: Record<string, string> = {
  javascript: 'Logo JavaScript',
  php: 'Logo PHP',
  python: 'Logo Python',
};
---
<figure
  role="img"
  aria-label={labelMap[name]}
  class={`inline-flex items-center justify-center rounded-xl shadow-soft border border-slate-200 ${cls}`}
  style={`width:${size}px;height:${size}px;`}
>
  {
    name === 'javascript' && (
      <div class="flex h-full w-full items-center justify-center rounded-xl bg-[#F7DF1E]">
        <span class="text-[14px] font-extrabold leading-none text-black">JS</span>
      </div>
    )
  }
  {
    name === 'php' && (
      <div class="flex h-full w-full items-center justify-center rounded-xl bg-[#777BB4]">
        <span class="text-[12px] font-bold tracking-wide text-white">PHP</span>
      </div>
    )
  }
  {
    name === 'python' && (
      <div class="flex h-full w-full items-center justify-center rounded-xl bg-gradient-to-b from-[#3776AB] to-[#FFD43B]">
        <span class="text-[14px] font-extrabold text-white drop-shadow-sm">Py</span>
      </div>
    )
  }
</figure>

