---
export interface Props {
  id?: string;
  title: string;
  description?: string;
}
const { id, title, description } = Astro.props as Props;
---
<section id={id} aria-labelledby={id ? `${id}-heading` : undefined} class="py-14 sm:py-16">
  <div class="container-px mx-auto">
    <div class="mx-auto max-w-2xl text-center">
      <h2 id={id ? `${id}-heading` : undefined} class="text-2xl font-bold text-slate-900 sm:text-3xl dark:text-slate-100">{title}</h2>
      {description && <p class="mt-3 text-slate-600 dark:text-slate-300">{description}</p>}
    </div>
    <div class="mt-8">
      <slot />
    </div>
  </div>
</section>
