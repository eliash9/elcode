---
export interface Props {
  quote: string;
  author: string;
  role?: string;
}
const { quote, author, role } = Astro.props as Props;
---
<figure class="card p-6">
  <blockquote class="text-slate-700 dark:text-slate-300">“{quote}”</blockquote>
  <figcaption class="mt-4 text-sm font-medium text-slate-900 dark:text-slate-100">
    {author}{role ? <span class="text-slate-500"> — {role}</span> : null}
  </figcaption>
</figure>
