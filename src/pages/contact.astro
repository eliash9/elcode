---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---
<BaseLayout title="Kontak â€” ELCODE" description="Hubungi ELCODE untuk pertanyaan, kolaborasi, atau kontribusi.">
  <Navbar />
  <main id="main" class="container-px mx-auto py-16">
    <div class="grid gap-8 md:grid-cols-2">
      <section class="card p-6">
        <h1 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Kontak</h1>
        <p class="mt-2 text-slate-600 dark:text-slate-300">Kirim pesan melalui formulir berikut. Ini simulasi tanpa backend.</p>
        <form id="contact-form" class="mt-6 space-y-3" novalidate>
          <div>
            <label for="name" class="text-sm font-medium text-slate-700">Nama</label>
            <input id="name" name="name" required class="mt-1 w-full rounded-xl border-slate-300 focus:border-brand focus:ring-brand dark:bg-slate-900/60 dark:border-slate-700 dark:text-slate-100" />
          </div>
          <div>
            <label for="email" class="text-sm font-medium text-slate-700">Email</label>
            <input id="email" name="email" type="email" required class="mt-1 w-full rounded-xl border-slate-300 focus:border-brand focus:ring-brand dark:bg-slate-900/60 dark:border-slate-700 dark:text-slate-100" />
          </div>
          <div>
            <label for="message" class="text-sm font-medium text-slate-700">Pesan</label>
            <textarea id="message" name="message" rows="4" required class="mt-1 w-full rounded-xl border-slate-300 focus:border-brand focus:ring-brand dark:bg-slate-900/60 dark:border-slate-700 dark:text-slate-100"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Kirim</button>
          <p id="contact-feedback" class="text-sm" aria-live="polite"></p>
        </form>
        <script>
          const cform = document.getElementById('contact-form');
          const fb = document.getElementById('contact-feedback');
          cform?.addEventListener('submit', (e) => {
            e.preventDefault();
            fb.textContent = 'Terima kasih! Pesan Anda terkirim (simulasi).';
            fb.className = 'text-sm text-green-700 mt-2';
            cform?.reset();
          });
        </script>
      </section>
      <aside class="card p-6">
        <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-100">Saluran Lain</h2>
        <ul class="mt-3 space-y-2 text-slate-700 dark:text-slate-300">
          <li>
            <a class="inline-flex items-center gap-2 text-brand hover:underline" href="https://whatsapp.com/channel/0029VaFGhM05Ui2ZtuEXWC3N" target="_blank" rel="noopener">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M20 3H4a1 1 0 00-1 1v16l4-4h13a1 1 0 001-1V4a1 1 0 00-1-1z"/></svg>
              WhatsApp
            </a>
          </li>
          <li>
            <a class="inline-flex items-center gap-2 text-brand hover:underline" href="https://www.threads.net/@elcode9" target="_blank" rel="noopener">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 5c-6 0-7 4-7 7s1 7 7 7 7-4 7-7-1-7-7-7z"/></svg>
              Threads
            </a>
          </li>
          <li>
            <a class="inline-flex items-center gap-2 text-brand hover:underline" href="https://github.com/elcode9" target="_blank" rel="noopener">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 2C7 2 3.5 5.6 3.5 10.6c0 3.8 2.4 7 5.7 8.1.4.1.6-.2.6-.4v-2.1c-2.3.5-2.8-1-2.8-1-.4-1-.9-1.3-.9-1.3-.8-.5.1-.5.1-.5.9.1 1.3.9 1.3.9.8 1.3 2.1.9 2.6.7.1-.6.3-1 .6-1.2-1.9-.2-3.9-1-3.9-4.3 0-1 .4-1.8 1-2.5-.1-.2-.5-1.2.1-2.4 0 0 .8-.3 2.6 1a8.8 8.8 0 0 1 4.7 0c1.8-1.3 2.6-1 2.6-1 .6 1.2.2 2.2.1 2.4.6.7 1 1.5 1 2.5 0 3.3-2 4-3.9 4.3.3.3.6.8.6 1.6v2.4c0 .2.2.5.6.4 3.3-1.1 5.7-4.3 5.7-8.1C20.5 5.6 17 2 12 2z"/></svg>
              GitHub
            </a>
          </li>
        </ul>
      </aside>
    </div>
  </main>
  <Footer />
</BaseLayout>
